# Backend defaults for local development
BACKEND_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000

# Simulation Mode: simulated | realtime | historical | hybrid
MODE=simulated
HISTORICAL_SIMULATION_START_DATE=2025-01-06

# API Keys (server-side only; keep these out of git)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here

# Simulation Intervals (in milliseconds)
SIM_INTERVAL_MS=30000
TRADE_INTERVAL_MS=7200000

# Persistence
PERSISTENCE_DRIVER=file
PERSIST_PATH=./data/snapshot.json

# Logging
LOG_LEVEL=INFO
